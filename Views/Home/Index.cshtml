@{
    ViewData["Title"] = "Home Page";
}

<div class="container mainContainer">
    <main role="main" class="pb-3">
        <div class="text-center">
            <br />
            <h4 class="pomodoroText">Pomodoro</h4>
            <p class="timer">25:00</p>
            <div class="buttons">
                <input class="timerBtn Btn" onclick="SwitchTimer()" type="button"
                       value="Start timer">
                <input class="resetBtn Btn" onclick="Reset()" type="button"
                       value="Reset">
            </div>
            <br />
            <br />
        </div>
    </main>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/timer.js"></script>
}
